<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".StepTwoActivity">

    <ImageView
        android:id="@+id/imageViewStepTwo"
        android:layout_width="359dp"
        android:layout_height="354dp"
        android:layout_marginTop="350dp"
        android:layout_marginBottom="57dp"
        android:contentDescription="@string/step_two_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/step_two_img" />

    <ImageView
        android:id="@+id/imageViewNextStepTwo"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="41dp"
        android:contentDescription="@string/next_imageview"
        android:onClick="onClickNext"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageViewStepTwo"
        app:srcCompat="@drawable/btn_next_img" />
</androidx.constraintlayout.widget.ConstraintLayout>